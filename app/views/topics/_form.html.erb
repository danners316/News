<%= form_for(@topic) do |f| %>

    <p>
      <%= f.label :title %><br />
      <%= f.text_area :title, :size => "100x1" %>
    </p>
    <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :size => "100x30" %>
  </p>
    <p>
      <%= f.label :attachment, 'Picture??' %><br />
      <%= f.file_field :attachment %><br />
    </p>
    <p>
      <%= f.label :tag, 'Tag It!' %><br />
      <%= f.select :tag, ['General', 'Football', 'Ramblings', 'Travel', 'Food'] %><br />
    </p>

    <p>
  <p>
    <%= f.hidden_field :name, :value => "#{current_user.name}"  %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
